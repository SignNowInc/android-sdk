<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SignnowSDK" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@drawable/background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green500</item>
        <item name="colorSecondaryVariant">@color/greenA300</item>
        <item name="colorOnSecondary">@color/trolleyGray800</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="editTextStyle">@style/EditText</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <!--toolbar text color-->
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="itemTextAppearance">@style/ContextMenuTextAppearance</item>
        <item name="android:itemTextAppearance">@style/ContextMenuTextAppearance</item>
        <!--window set up-->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!--card view shadow-->
        <item name="android:ambientShadowAlpha">0.01</item>
        <item name="android:spotShadowAlpha">0.09</item>
    </style>

    <style name="Theme.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.SignnowSDK.WithFooter">
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

</resources>